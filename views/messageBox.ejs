<%- include("header"); -%>

<br>


  <div class="card" style="width: 30rem; margin:auto" >
    <div class="">
      <img style="height: 450px" src="https://media.istockphoto.com/vectors/user-avatar-profile-icon-black-vector-illustration-vector-id1209654046?k=20&m=1209654046&s=612x612&w=0&h=Atw7VdjWG8KgyST8AXXJdmBkzn0lvgqyWod9vTb2XoE=" class="card-img-top" alt="...">
    </div>


  <div class="card-body" style="margin:auto; height: 250px; overflow-y: scroll;">

    <ul>

    <% chatList.forEach(function(item){ %>

      <li>
        <%=item.sender%>
         :
        <%=item.text%>
      </li>

    <% }); %>


    </ul>
  </div>
  <br>

  <div class="form-group" style="margin:auto">

    <form action="/messege/<%= reciever %>" method="post" style="margin:auto">
    <input type="text" class="form-control" name="message" id="message" name="message" placeholder="Write your message here!">
    <br>
    <button type="submit" name="button" class="btn btn-success" style="margin:auto">Send</button>

    </form>

  </div>

  <br>
</div>



